  "components": {
    "schemas": {
      "Debtor": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "name": {
            "$ref": "#/components/schemas/IName"
          },
          "dob": {
            "$ref": "#/components/schemas/IDob"
          },
          "address": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/IAddress"
            }
          },
          "maritalStatus": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "mobile": {
            "type": "string"
          },
          "employment": {
            "$ref": "#/components/schemas/IEmployment"
          },
          "comments": {
            "type": "string"
          }
        },
        "required": [
          "_id",
          "address",
          "comments",
          "dob",
          "email",
          "employment",
          "maritalStatus",
          "mobile",
          "name",
          "title"
        ]
      },
      "IName": {
        "type": "object",
        "properties": {
          "firstName": {
            "type": "string"
          },
          "middleName": {
            "type": "string"
          },
          "surname": {
            "type": "string"
          },
          "suffix": {
            "type": "string"
          }
        },
        "required": ["firstName", "surname"]
      },
      "IDob": {
        "type": "object",
        "properties": {
          "day": {
            "type": "number"
          },
          "month": {
            "type": "string"
          },
          "year": {
            "type": "number"
          }
        },
        "required": ["day", "month", "year"]
      },
      "IAddress": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "houseNumber_alias": {
            "type": "string"
          },
          "barangay": {
            "type": "string"
          },
          "town_city": {
            "type": "string"
          },
          "province": {
            "type": "string"
          },
          "length": {
            "type": "string"
          },
          "comments": {
            "type": "string"
          }
        },
        "required": [
          "_id",
          "barangay",
          "comments",
          "houseNumber_alias",
          "length",
          "province",
          "town_city"
        ]
      },
      "IRequestAddress": {
        "type": "object",
        "properties": {
          "houseNumber_alias": {
            "type": "string"
          },
          "barangay": {
            "type": "string"
          },
          "town_city": {
            "type": "string"
          },
          "province": {
            "type": "string"
          },
          "length": {
            "type": "string"
          },
          "comments": {
            "type": "string"
          }
        },
        "required": [
          "_id",
          "barangay",
          "comments",
          "houseNumber_alias",
          "length",
          "province",
          "town_city"
        ]
      },
      "IEmployment": {
        "type": "object",
        "properties": {
          "presentEmployer": {
            "type": "string"
          },
          "occupation": {
            "type": "string"
          },
          "yearsOfExperience": {
            "type": "string"
          },
          "grossMonthlyIncome": {
            "type": "number"
          }
        },
        "required": [
          "grossMonthlyIncome",
          "occupation",
          "presentEmployer",
          "yearsOfExperience"
        ]
      },
      "ITransaction": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "collector_id": { "type": "string" },
          "date": { "type": "string", "format": "date-time" },
          "amount": { "type": "number" },
          "comment": { "type": "string" }
        },
        "required": ["_id", "amount", "collector_id", "comment", "date"]
      },
      "IRole": {
        "type": "object",
        "properties": {
          "isAgent": {
            "type": "boolean"
          },
          "isBg": {
            "type": "boolean"
          },
          "isCollector": {
            "type": "boolean"
          }
        },
        "required": ["isAgent", "isBg", "isCollector"]
      },
      "IOfficer": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "firstName": {
            "type": "string"
          },
          "surname": {
            "type": "string"
          },
          "pin": {
            "type": "number"
          },
          "role": {
            "$ref": "#/components/schemas/IRole"
          },
          "joinDate": {
            "type": "string",
            "format": "date-time"
          },
          "approvedLoans": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "declinedLoans": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "status": {
            "enum": ["active", "inactive"],
            "type": "string"
          }
        },
        "required": [
          "_id",
          "firstName",
          "joinDate",
          "pin",
          "role",
          "status",
          "surname"
        ]
      },
      "IPayment": {
        "type": "object",
        "properties": {
          "loan_id": { "type": "string" },
          "rate": { "type": "string" },
          "frequency": { "enum": ["bi-weekly", "monthly"], "type": "string" },
          "transactions": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/ITransaction" }
          },
          "status": { "enum": ["active", "cleared"], "type": "string" },
          "balance": { "type": "number" }
        },
        "required": [
          "_id",
          "balance",
          "frequency",
          "loan_id",
          "rate",
          "status",
          "transactions"
        ]
      },
      "INewLoan": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "officerId": { "type": "string" },
          "debtor": { "$ref": "#/components/schemas/IDebtor" },
          "payment": { "$ref": "#/components/schemas/IPayment" },
          "date": { "type": "string", "format": "date-time" },
          "amount": { "type": "number" },
          "promise": {
            "enum": ["12 months", "3 months", "6 months"],
            "type": "string"
          },
          "status": {
            "enum": [
              "active",
              "approved",
              "cleared",
              "declined",
              "submitted",
              "verified"
            ],
            "type": "string"
          }
        },
        "required": [
          "_id",
          "amount",
          "date",
          "debtor",
          "officerId",
          "payment",
          "promise",
          "status"
        ]
      },
      "ILoan": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "agent_id": { "type": "string" },
          "bgOfficer": { "type": "string" },
          "debtor_id": { "type": "string" },
          "payment_id": { "type": "string" },
          "date": { "type": "string", "format": "date-time" },
          "amount": { "type": "number" },
          "promise": { "type": "string" },
          "status": {
            "enum": [
              "active",
              "approved",
              "cleared",
              "declined",
              "submitted",
              "verified"
            ],
            "type": "string"
          }
        },
        "required": [
          "_id",
          "agent_id",
          "amount",
          "bgOfficer",
          "date",
          "debtor_id",
          "payment_id",
          "promise",
          "status"
        ]
      },
      "Error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "status": {
            "type": "number"
          },
          "additionalInfo": {
            "type": "object"
          }
        }
      },
      "ILogin": {
        "type": "object",
        "properties": {
          "surname": {
            "type": "string"
          },
          "pin": {
            "type": "number"
          }
        }
      }
    }
  }
}
